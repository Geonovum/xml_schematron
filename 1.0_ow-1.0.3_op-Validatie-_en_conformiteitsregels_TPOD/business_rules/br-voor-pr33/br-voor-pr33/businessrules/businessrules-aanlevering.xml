<?xml version="1.0" encoding="UTF-8"?>
<BusinessRules schemaversie="@@@VERSIE@@@"
  xmlns="https://standaarden.overheid.nl/stop/imop/businessrules/">
  <BusinessRuleGroep>
    <geldtVoor>
      <Documenttype>
        <localName>AanleveringInformatieObject</localName>
        <namespace>https://standaarden.overheid.nl/lvbb/stop/aanlevering/</namespace>
      </Documenttype>
    </geldtVoor>
    <geldendeBusinessRules>
      <BusinessRule>
        <code>STOP3210</code>
        <ernst>fout</ernst>
        <regel>Het element data:heeftBestanden MOET in aan de LVBB aangeleverde GIOs naar precies één
          bestand verwijzen.</regel>
        <melding>Element data:heeftBestanden van <var naam="Expression-ID"/> heeft géén of meer dan één bestand. Dit is niet
          toegestaan, lever slechts één bestand aan.</melding>
        <documentatie>
          <link href="stop#xsd:data:heeftBestanden" />
          <link href="lvbb#xsd:lvbba:AanleveringInformatieObject" />
        </documentatie>
      </BusinessRule>
    </geldendeBusinessRules>
  </BusinessRuleGroep>
</BusinessRules>
